<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Unesi IP Adresu"
            android:id="@+id/IPadresa"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Connect"
            android:id="@+id/connectButton"/>



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:id="@+id/obavjestenje"
        android:text="konektovani ste na"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:text="RED"
            android:id="@+id/redLED"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:text="Green"
            android:id="@+id/greenLED"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:text="BLue"
            android:id="@+id/blueLED"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:text="Purple"
            android:id="@+id/purpleLED"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:text="TURN OFF ALL"
            android:id="@+id/ugasiLEDs"/>
    </LinearLayout>
    

</LinearLayout>
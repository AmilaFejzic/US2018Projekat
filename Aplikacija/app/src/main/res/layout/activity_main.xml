<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="ba.unsa.etf.rma.damir.usprojekat.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi ON/OFF"
        android:id="@+id/button"
        android:onClick="wifi_connect"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED RED"
        android:id="@+id/dRed"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="led_1"
        android:background="@color/crvena"
        android:textColor="@color/bijela"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED GREEN"
        android:id="@+id/dGreen"
        android:onClick="led_2"
        android:layout_below="@+id/dRed"
        android:layout_marginTop="10dp"
        android:background="@color/zelena"
        android:textColor="@color/bijela"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED BLUE"
        android:id="@+id/dBlue"
        android:layout_below="@+id/dGreen"
        android:onClick="led_3"
        android:layout_marginTop="10dp"
        android:background="@color/plava"
        android:textColor="@color/bijela"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
